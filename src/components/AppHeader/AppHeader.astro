---
import MobileNav from '@/components/AppHeader/MobileNav.astro'
import { navData } from '@/components/AppHeader/navData'
import { Image } from 'astro:assets'
import P1 from '@/assets/adwokatura.png'
---

<header
  class:list={[
    'flex w-full fixed left-0 z-99 top-0 px-spaced xl:py-4 items-center h-20 lg:h-24 xl:h-30 gap-12',
    '[&>nav]:flex-1 [&>nav>ul]:flex [&>nav>ul]:items-center [&>nav>ul]:gap-12',
    '[&>nav.dn]:lg:block [&>nav.dn]:hidden backdrop-blur-md',
  ]}
>
  <nav class='dn'>
    <ul class='justify-end'>
      {
        navData.slice(0, navData.length / 2).map(({ href, title }) => (
          <li class='relative shrink-0 inline-flex aboreto-regular items-center text-base xl:text-2xl group transition overflow-clip px-4'>
            <a class:list={['']} href={href}>
              {title}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
  <a href='/' aria-label='Strona główna'>
    <Image src={P1} alt='Logo' class={'w-20 lg:w-26 xl:w-32 object-fill'} />
  </a>
  <nav class='dn'>
    <ul>
      {
        navData.slice(navData.length / 2).map(({ href, title }) => (
          <li class='relative shrink-0 aboreto-regular inline-flex items-center text-base xl:text-2xl group transition overflow-clip  px-4'>
            <a class:list={['']} href={href}>
              {title}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
  <MobileNav />
</header>
